extends layout

block content 

    h1= title 

    form(method="POST")
        div.form-group
            label(for="first_name" style="margin: 1rem 0 0.5rem;") First Name:
            input#first_name.form-control(type='text', placeholder='First name (Christian)' 
            name='first_name' required value=(undefined===author ? '' : author.first_name) )
            label(for="family_name" style="margin: 1rem 0 0.5rem;") Family Name: 
            input#family_name.form-control(type='text', placeholder='Family name (Surname)' 
            name='family_name' required value=(undefined===author ? '' : author.family_name)) 
        div.form-group
            label(for="date_of_birth" style="margin: 1rem 0 0.5rem;") Date of Birth:
            input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
            label(for="date_of_death" style="margin: 1rem 0 0.5rem;") Date of Death:
            input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_birth) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li.text-danger!= error.msg