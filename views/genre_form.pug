extends layout 

block content 

    h1 #{title}

    // POST request to the same URL since action is empty
    form(method="POST") 
        div.form-group
            label(for="name" style="font-size: 25px; font-weight: 600;") Genre: 
            input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' 
            name='name' required value=(undefined===genre ? '' : genre.name), style="margin:0 0 1rem;" )
            button.btn.btn-primary(type="submit") Submit

    if errors 
        ul 
            for error in errors 
                li.text-danger!= error.msg
